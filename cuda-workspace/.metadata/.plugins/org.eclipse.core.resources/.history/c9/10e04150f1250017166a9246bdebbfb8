char convert(int x)
{
	char res = 'a';
	int amount = log2((double)x) + (int)res;
	res = (char) amount;
	return res;
}

int main( void )
{
	grid * g;
	cell * array;
	cell** cells;
	int size = N*N;
	int n = N;
	cudaMallocManaged( (void**)&g,sizeof(grid));
	g->size = N;
	cudaMallocManaged( (void**)&array,size*sizeof(cell));
	cudaMallocManaged((void **)array, N * sizeof(cell *));

	for(int i = 0; i < N; i++)
	{
		cells[i] = cells[i * N];
	}
	path *p;
	cudaMallocManaged((void **)&p, 2);
	g->cells = cells;
	p->next = p++;
	p->letters[0] = 4;
	p->letters[1] = 3;
	p->letters[2] = 1;
	p->letters[3] = 4;
	compute<<<n,n>>>(g,p);
	cudaFree(array);
	return 0;
}

