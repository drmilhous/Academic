void initCell(cell * c)
	{

		for (int row = 0; row < N; row++)
			{
				for (int col = 0; col < N; col++)
					{
						c[row * N + col].value = col;
						printf("[%02d][%02d]%02d ", row, col, c[row * N + col].bitmap);
						c[row * N + col].value = -1;
					}
				printf("\n");
			}
	}
